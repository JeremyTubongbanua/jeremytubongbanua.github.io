---
import { type SortBy, type OrderBy } from '../../types/project.ts';

interface Props {
  sortBys: readonly SortBy[],
  orderBys: readonly OrderBy[],
}

const { sortBys, orderBys } = Astro.props;
---
<fieldset>
  <legend>Sort</legend>
  <div>
    <label>
      Sort By:
      <select id="sort-sort-by-select">
        {sortBys.map((sortBy) => <option value={sortBy}>{sortBy}</option>)}
      </select>
    </label>
    <label>
      Order By:
      <select id="sort-order-by-select">
        {orderBys.map((orderBy) => <option value={orderBy}>{orderBy}</option>)}
      </select>
    </label>
  </div>
</fieldset>

