---
import { type SortBy, type OrderBy } from '../../types/experience.ts';

interface Props {
  sortBys: readonly SortBy[],
  orderBys: readonly OrderBy[],
}

const { sortBys, orderBys } = Astro.props;
---
<fieldset>
  <legend>Sort</legend>
  <span>
    Sort By:
    <select id="sort-by-select">
      {sortBys.map((sortBy) => <option value={sortBy}>{sortBy}</option>)}
    </select>
  </span>
  <span>
    Order By:
    <select id="order-by-select">
      {orderBys.map((orderBy) => <option value={orderBy}>{orderBy}</option>)}
    </select>
  </span>
</fieldset>
