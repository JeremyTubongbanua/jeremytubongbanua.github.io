---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { type Experience } from '../../types/experience.ts';
import ExperiencesPage from '../../components/experiences/ExperiencesPage.astro';
const pageTitle = "Experiences";
const allExperiences: Experience[] = Object.values(import.meta.glob('./**/index.md', {eager: true}));
const allCategories: string[] = [...new Set(allExperiences.map((experience: Experience) => experience.frontmatter.category))];
---
<BaseLayout pageTitle={pageTitle}>
  <ExperiencesPage 
    allExperiences={allExperiences}
    allCategories={allCategories}
  />
</BaseLayout>

