---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectsCanvas from '../../components/ProjectsCanvas.jsx';
const allProjects =
  Object.values(import.meta.glob('../projects/**/index.md', {eager: true}));

/**
  * project.frontmatter.
  *   title
  *   subtitle
  *   description
  *   date
  *   languages: []
  *   progress: {In-Progress, Finished}
  *   association: {Atsign, Hobby, Hackathon}
  *   layout
  *   hidden: {true, false}
  */
---
<BaseLayout pageTitle="Projects">
  <ProjectsCanvas client:load allProjects={allProjects}/>
</BaseLayout>


